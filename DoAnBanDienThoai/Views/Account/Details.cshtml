<script>
    $(document).ready(function () {
        // Assuming `current_passw` is defined elsewhere with the correct value

        $(document).on('keyup', '#password, #confirmed_pass, #current_pass', function () {
          

            let currentPass = $('#current_pass').val();
            let newPassword = $('#password').val();
            let confirmedPassword = $('#confirmed_pass').val();

            try {
                if ($('#current_pass').val().trim() === '') {
                    $('#message').html('Please fill all fields');
                    $('#change_detail').prop('disabled', true);
                } else 
                if (newPassword === confirmedPassword) {
                    $('#message').html('Valid');
                    $('#change_detail').prop('disabled', false);
                } else {
                    $('#message').html('New password does not match');
                    $('#change_detail').prop('disabled', true);
                }
            } catch (error) {
                console.error('Error during password validation:', error);
                $('#message').html('An error occurred. Please try again.');
            }
        });
    });
