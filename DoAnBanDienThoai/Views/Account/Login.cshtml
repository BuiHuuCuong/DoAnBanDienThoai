@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--login and register section start here-->
<div class="mg-login-reg-section">
    <div class="container">
        <div class="row">
            <div style="margin-left: 25%;" class="col-lg-6 col-md-6 col-sm-12">
                <div class="mg-login-form mg-login-form-js">
                    <div class="mg-login-form-heading">
                        <span>Login</span>
                    </div>
                    <form>
                        <div class="mg-form-main">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <div class="mg-form-input-field">
                                        <input type="text" placeholder="Username or email address">
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <div class="mg-form-input-field">
                                        <input type="text" placeholder="Password">
                                       
                                    </div>
                                </div>

                                <div class="mg-form-submit-btn">
                                    <button class="btn">LOGIN</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="mg-login-form mg-forget-form mt-3">
                                        
                    <form>
                        <div class="mg-form-main">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <div class="mg-form-input-field">
                                        <input type="text" placeholder="Username or email address">
                                    </div>
                                    <a class="mg-redirect-login" href="javascript:void(0);">Login here</a>
                                </div>
                                <div class="mg-form-submit-btn">
                                    <button class="btn">SUBMIT</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!--login and register section end here-->