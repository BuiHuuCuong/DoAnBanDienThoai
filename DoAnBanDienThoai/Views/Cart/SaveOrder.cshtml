    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Thank you section start here-->
<div class="mg-thnaku-page-section">
    <div class="container">
        <div class="mg-thanku-content">
            <div class="mg-thanku-icon">
                <img src="assets/images/icons/Thankyou-icon.svg" alt="">
            </div>
            <span>Thank you for your order</span>
            <p>

            </p>
        </div>
        <div class="mg-thanku-order-details">
            <div class="mg-thanku-heading">
                <span>Order Details</span>
            </div>
            <div class="mg-thanku-order-details-content">
                <div class="row">
                    <div class="col-lg-6 col-md-12 col-sm-12">
