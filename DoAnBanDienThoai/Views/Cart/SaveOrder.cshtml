                                <h5> Email</h5>
                                <h6>@Model.OrderDTO.Email</h6>
                            </div>
                            <div class="mg-odc-list-inner">
                                <h5>Address</h5>
                                <h6>@Model.OrderDTO.Address</h6>
                            </div>
                            <div class="mg-odc-list-inner">
                                <h5>Phone</h5>
                                <h6>@Model.OrderDTO.Phone</h6>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12 col-sm-12">
                        <div style="margin-top: 5%" class="mg-social-media-thumb">
                            <img src="~/assets/images/banner/Thanks.png" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="mg-home-link">
